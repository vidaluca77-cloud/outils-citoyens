{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Recherche d'aides sociales",
  "description": "Générez simplement votre demande d'aides sociales personnalisée",
  "type": "object",
  "properties": {
    "situation_familiale": {
      "type": "string",
      "title": "Composition du foyer",
      "description": "Ex: 2 adultes, 1 enfant"
    },
    "situation_pro": {
      "type": "string",
      "title": "Situation professionnelle",
      "enum": [
        "CDI",
        "CDD", 
        "AE",
        "chomage",
        "etudiant",
        "retraite",
        "autre"
      ]
    },
    "revenu_mensuel": {
      "type": "number",
      "title": "Revenus mensuels nets (€)",
      "description": "Revenus nets du foyer"
    },
    "situation_logement": {
      "type": "string",
      "title": "Situation de logement",
      "enum": [
        "locataire",
        "proprietaire",
        "heberge"
      ]
    },
    "problemes_rencontres": {
      "type": "string",
      "title": "Difficultés rencontrées",
      "description": "Décrivez vos difficultés (logement, santé, finances...)"
    },
    "identite": {
      "type": "object",
      "title": "Vos informations",
      "properties": {
        "nom": {
          "type": "string",
          "title": "Nom"
        },
        "prenom": {
          "type": "string",
          "title": "Prénom"
        },
        "adresse": {
          "type": "string",
          "title": "Adresse complète"
        }
      },
      "required": [
        "nom",
        "prenom",
        "adresse"
      ]
    }
  },
  "required": [
    "situation_familiale",
    "situation_pro",
    "revenu_mensuel",
    "situation_logement",
    "problemes_rencontres",
    "identite"
  ],
  "additionalProperties": false
}