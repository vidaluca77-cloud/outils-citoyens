{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Réclamation droit du travail",
  "description": "Défendez vos droits au travail (salaires, congés, harcèlement, licenciement)",
  "type": "object",
  "properties": {
    "type_probleme": {
      "type": "string",
      "title": "Type de problème",
      "enum": [
        "heures_supplementaires",
        "licenciement_abusif",
        "harcelement",
        "salaire_impaye",
        "conges_refuses",
        "discrimination",
        "autre"
      ]
    },
    "type_contrat": {
      "type": "string",
      "title": "Type de contrat",
      "enum": [
        "CDI",
        "CDD",
        "Interim",
        "Stage",
        "Autre"
      ]
    },
    "anciennete": {
      "type": "string",
      "title": "Ancienneté dans l'entreprise",
      "description": "Durée de votre emploi (ex: 2 ans 3 mois)"
    },
    "description_probleme": {
      "type": "string",
      "title": "Description du problème",
      "description": "Décrivez précisément la situation"
    },
    "elements_preuve": {
      "type": "string",
      "title": "Éléments de preuve",
      "description": "Documents, témoins, messages que vous possédez"
    },
    "identite": {
      "type": "object",
      "title": "Vos informations",
      "properties": {
        "nom": {
          "type": "string",
          "title": "Nom"
        },
        "prenom": {
          "type": "string",
          "title": "Prénom"
        },
        "adresse": {
          "type": "string",
          "title": "Adresse complète"
        }
      },
      "required": [
        "nom",
        "prenom",
        "adresse"
      ]
    },
    "employeur": {
      "type": "object",
      "title": "Informations employeur",
      "properties": {
        "nom_entreprise": {
          "type": "string",
          "title": "Nom de l'entreprise"
        },
        "adresse_entreprise": {
          "type": "string",
          "title": "Adresse de l'entreprise"
        }
      },
      "required": [
        "nom_entreprise",
        "adresse_entreprise"
      ]
    }
  },
  "required": [
    "type_probleme",
    "type_contrat",
    "description_probleme",
    "identite",
    "employeur"
  ],
  "additionalProperties": false
}
